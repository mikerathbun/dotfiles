#!/bin/sh
tmux new-session -d 'nvim' # Create a new session named nvim' but don't attach (-d)
tmux split-window -v  #Split the window and execute 'top' vertically (-v)
# tmux split-window -h # Split the window horizontally
# tmux new-window 'top' # Create a new window and execute the command 'top' in it.
tmux -2 attach-session -d # Attach to the created session  using 256 colors (-2) and detach (-d) any other sessions.

